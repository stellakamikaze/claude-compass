{
  "env": {
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "1",
    "DISABLE_TELEMETRY": "1"
  },
  "permissions": {
    "allow": [
      "Read",
      "Write",
      "Edit(path:~/.claude/**)",
      "Edit(path:~/Documents/ClaudeCode/**)",
      "Write(path:~/.claude/**)",
      "Write(path:~/Documents/ClaudeCode/**)",
      "WebSearch",
      "WebFetch(domain:*)",
      "Bash(ls:*)",
      "Bash(dir:*)",
      "Bash(pwd:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(grep -E:*)",
      "Bash(rg:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(wc:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Bash(printf:*)",
      "Bash(echo:*)",
      "Bash(tree:*)",
      "Bash(stat:*)",
      "Bash(du:*)",
      "Bash(which:*)",
      "Bash(where:*)",
      "Bash(mkdir:*)",
      "Bash(touch:*)",
      "Bash(chmod:*)",
      "Bash(sed -n:*)",
      "Bash(sed -E -n:*)",
      "Bash(nl -ba)",
      "Bash(git status:*)",
      "Bash(git log:*)",
      "Bash(git show:*)",
      "Bash(git diff:*)",
      "Bash(git grep:*)",
      "Bash(git rev-parse:*)",
      "Bash(git rev-list:*)",
      "Bash(git ls-files:*)",
      "Bash(git ls-tree:*)",
      "Bash(git describe:*)",
      "Bash(git blame:*)",
      "Bash(git cat-file:*)",
      "Bash(git check-ignore:*)",
      "Bash(git config:*)",
      "Bash(git remote:*)",
      "Bash(git submodule:*)",
      "Bash(git ls-remote:*)",
      "Bash(git fetch:*)",
      "Bash(git branch:*)",
      "Bash(git switch:*)",
      "Bash(git checkout:*)",
      "Bash(git restore:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git stash:*)",
      "Bash(git merge:*)",
      "Bash(git rebase:*)",
      "Bash(git pull:*)",
      "Bash(git push:*)",
      "Bash(git -C:*)",
      "Bash(gh:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(node:*)",
      "Bash(python:*)",
      "Bash(py:*)",
      "Bash(pip:*)",
      "Bash(docker:*)",
      "Bash(docker-compose:*)",
      "Bash(curl:*)",
      "Bash(bd:*)",
      "Bash(powershell:*)",
      "Bash(start:*)",
      "Bash(open:*)"
    ],
    "deny": [
      "Bash(rm -rf /:*)",
      "Bash(rm -rf ~:*)",
      "Bash(del /s /q C::*)"
    ]
  },
  "model": "opus",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -NoProfile -File \"%USERPROFILE%\\.claude\\hooks\\session-start.ps1\" 2>nul || exit /b 0"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -ExecutionPolicy Bypass -NoProfile -File \"%USERPROFILE%\\.claude\\hooks\\session-end.ps1\" 2>nul || exit /b 0"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "py -3 \"%USERPROFILE%\\.claude\\hooks\\protect_claude_md.py\" 2>nul || exit /b 0"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write|NotebookEdit",
        "hooks": [
          {
            "type": "command",
            "command": "py -3 \"%USERPROFILE%\\.claude\\hooks\\emoji_remover.py\" 2>nul || exit /b 0"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "echo Claude Code"
  },
  "enabledPlugins": {
    "context7@claude-plugins-official": true,
    "linear@claude-plugins-official": false,
    "ralph-loop@claude-plugins-official": false,
    "frontend-design@claude-plugins-official": true,
    "github@claude-plugins-official": true,
    "serena@claude-plugins-official": false,
    "feature-dev@claude-plugins-official": true,
    "code-review@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": true,
    "security-guidance@claude-plugins-official": true,
    "pr-review-toolkit@claude-plugins-official": true,
    "playwright@claude-plugins-official": true,
    "ralph-wiggum@claude-plugins-official": false,
    "hookify@claude-plugins-official": true,
    "ralph-specum@smart-ralph": false
  }
}
